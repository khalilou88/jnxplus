{
  "version": 2,
  "outputCapture": "pipe",
  "$schema": "http://json-schema.org/schema",
  "title": "Run Task executor",
  "description": "",
  "type": "object",
  "properties": {
    "task": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ],
      "description": "Task to be executed"
    },
    "keepItRunning": {
      "type": "boolean",
      "description": "Keep the task running, you can use this option for serve target for example.",
      "default": false
    },
    "outputDirectory": {
      "type": "string",
      "description": "Where to store the project artifact in maven local repository for build target (dynamically calculated)"
    }
  },
  "required": ["task"]
}
